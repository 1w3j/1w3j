bindsym $mod+Ctrl+Left workspace prev;exec notify-send 'Prev workspace'
bindsym $mod+Ctrl+semicolon workspace next;exec notify-send 'Next workspace'
bindsym $mod+Ctrl+j workspace prev;exec notify-send 'Prev workspace'

